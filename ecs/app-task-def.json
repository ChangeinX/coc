{
  "family": "clan-boards-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::123456789012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "REPOSITORY_APP_PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {"containerPort": 80, "hostPort": 80}
      ],
      "dependsOn": [
        {"containerName": "worker", "condition": "START"}
      ]
    },
    {
      "name": "worker",
      "image": "REPOSITORY_WORKER_PLACEHOLDER",
      "essential": true,
      "portMappings": [
        {"containerPort": 8001, "hostPort": 8001}
      ]
    }
  ]
}
